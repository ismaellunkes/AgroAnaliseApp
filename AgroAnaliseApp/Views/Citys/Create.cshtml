@model AgroAnaliseApp.Models.City;
@using AgroAnaliseApp.Services;

@{
    ViewData["Title"] = "Create";
    /// Carregar os combobox de Enum
    IEnumerable<SelectListItem> StatesNames = EnumServices.EnumToSelectList<State>("U").OrderBy(x => x.Text);
}

<h2>Create</h2>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
