@model AgroAnaliseApp.Models.ViewModels.AddressFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Address</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Address.Line1" class="control-label"></label>
                <input asp-for="@Model.Address.Line1" class="form-control" />
                <span asp-validation-for="@Model.Address.Line1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address.Line2" class="control-label"></label>
                <input asp-for="@Model.Address.Line2" class="form-control" />
                <span asp-validation-for="@Model.Address.Line2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address.ZipCode" class="control-label"></label>
                <input asp-for="@Model.Address.ZipCode" class="form-control" />
                <span asp-validation-for="@Model.Address.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address.Coordinates" class="control-label"></label>
                <input asp-for="@Model.Address.Coordinates" class="form-control" />
                <span asp-validation-for="@Model.Address.Coordinates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.City.Name" class="control-label"></label>
                <select asp-for="Address.CityId" asp-items="@(new SelectList(Model.Citys, "Id","Name"))" class ="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

